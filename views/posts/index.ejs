<% include ../partials/header %>


<h4>Posts</h4>
<ul>
  <% posts.forEach(function(post){%>
    <li>
      <h4><%=post.title%></h4>
      <a href="/posts/<%= post._id%>"><img src="<%=post.image%>" alt="<%= post.content%>"/></a>
      </br></br>
      <textarea name="<%= post._id%>" rows="8" cols="40"><%=post.content%></textarea>
      </br>
      <%= post.author%><%= moment(post.date).format('llll') %>
      </br>
      <a href='/posts/<%= post._id %>/comments'>Comments</a>
    </li>
  <% })%>
</ul>
<% include ../partials/footer %>
