<% include ../partials/header %>
<h1>Sign up</h1>
<div class="row">
  <form method="POST" action="/signup" >
    <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label>Name:
          <input type="text" id="name" name="user[name]" class="form-control" autofocus>
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label>Email:
          <input type="email" id="email" name="user[email]" class="form-control" >
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label>Birthday:
          <input type="date" id="bday" name="user[bday]" class="form-control" >
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label>Avatar:
          <input type="text" id="avatar" name="user[avatar]" class="form-control" >
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label> Password:
          <input type="password" id="password" name="user[password]" class="form-control">
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <input type="submit" value="Sign up" class="btn btn-primary">
      </div>
    </div>
  </div>
  </form>
</div>

</br></br>
<a href="/login">Already have an account? Login in here</a>
<% include ../partials/footer %>
